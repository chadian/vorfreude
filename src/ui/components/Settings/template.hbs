{{#if settingsNotification}}
  <div id="Settings__notification">{{settingsNotification}}</div>
{{/if}}

<a class="Settings__close" href="#">
  <span class="Settings__close-symbol">
    <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" viewBox="0 0 50 50" version="1.1" width="100%" height="100%">
      <g id="surface1">
        <path fill="#ffffff" d="M 9.15625 6.3125 L 6.3125 9.15625 L 22.15625 25 L 6.21875 40.96875 L 9.03125 43.78125 L 25 27.84375 L 40.9375 43.78125 L 43.78125 40.9375 L 27.84375 25 L 43.6875 9.15625 L 40.84375 6.3125 L 25 22.15625 Z "
        />
      </g>
    </svg>
  </span>
</a>
<div class="Settings">
  {{#unless constructedDate.isValid}}
    <div class="Settings__validiation">
        There's an issue with your date. You'll need to fix it before you can save.
    </div>
  {{/unless}}
  <form class="Settings__form" onsubmit={{action saveSettings}}>

    <label class="Settings__row">
      <div class="Settings__input-wrapper">
        <input type="text" onchange={{action setSettingByChangeEvent 'countdownMessage'}} value={{settings.countdownMessage}}/>
        <div class="Settings__input-line"></div>
        <div class="Settings__input-under-label">Countdown Message</div>
      </div>
    </label>

    <label class="Settings__row">
      <div class="Settings__input-wrapper">
        <input type="text" onchange={{action setSettingByChangeEvent 'allDoneMessage'}} value={{settings.allDoneMessage}}/>
        <div class="Settings__input-line"></div>
        <div class="Settings__input-under-label">All Done! Message</div>
      </div>
    </label>

    <label class="Settings__row">
      <div class="Settings__input-wrapper">
        <input type="text" onchange={{action setSettingByChangeEvent 'searchTerms'}} value={{settings.searchTerms}}/>
        <div class="Settings__input-line"></div>
        <div class="Settings__input-under-label">Image search terms</div>
      </div>
    </label>

    <div class="Settings__row">
      <label class="Settings__input-wrapper Settings__input-wrapper--date">
        <input type="number" min="1" max="2100" onchange={{action setSettingByChangeEvent 'date.year'}} value={{pad-int settings.date.year 2}}/>
        <div class="Settings__input-line"></div>
        <div class="Settings__input-under-label">Year (YYYY)</div>
      </label>

      <label class="Settings__input-wrapper Settings__input-wrapper--date">
        <input type="number" min="1" max="12" onchange={{action setSettingByChangeEvent 'date.month'}} value={{pad-int settings.date.month 2}}/>
        <div class="Settings__input-line"></div>
        <div class="Settings__input-under-label">Month (MM)</div>
      </label>

      <label class="Settings__input-wrapper Settings__input-wrapper--date">
        <input type="number" min="1" max="31" onchange={{action setSettingByChangeEvent 'date.day'}} value={{pad-int settings.date.day 2}}/>
        <div class="Settings__input-line"></div>
        <div class="Settings__input-under-label">Day (DD)</div>
      </label>

      <label class="Settings__input-wrapper Settings__input-wrapper--date">
        <input type="number" min="0" max="23" onchange={{action setSettingByChangeEvent 'date.hour'}} value={{pad-int settings.date.hour 2}}/>
        <div class="Settings__input-line"></div>
        <div class="Settings__input-under-label">Hour (HH)</div>
      </label>

      <label class="Settings__input-wrapper Settings__input-wrapper--date">
        <input type="number" min="0" max="59" onchange={{action setSettingByChangeEvent 'date.minute'}} value={{pad-int settings.date.minute 2}}/>
        <div class="Settings__input-line"></div>
        <div class="Settings__input-under-label">Minute (MM)</div>
      </label>
    </div>

    <button class="Button" type="submit">Save</button>
  </form>
</div>

