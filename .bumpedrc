files:
  - package.json
  - chrome/package.json
  - chrome/manifest.json
plugins:
  prerelease:
    Detecting problems before publish:
      plugin: bumped-terminal
      command: 'npm test'
  postrelease:
    Committing new version:
      plugin: bumped-terminal
      command: 'git add package.json chrome && git commit -m "Release $newVersion"'
    Tag new version:
      plugin: 'bumped-terminal'
      command: 'git tag $newVersion'
    Push reminder:
      plugin: bumped-terminal
      command: echo "Don't forget to git push"
