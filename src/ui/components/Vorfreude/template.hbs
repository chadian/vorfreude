<Store as |store|>
  <Wallpaper
    @photoUrl={{store.photoUrl}}
    @shouldBlur={{showSettings}}
  />

  {{#unless showSettings}}
    <div class="Vorfreude__refresh-wallpaper Button" onclick={{action refreshWallpaper}}>
      <span class="Vorfreude__refresh-wallpaper-symbol">ğŸ†• Refresh Photo</span>
    </div>
    <a class="Vorfreude__show-settings Button" href="#settings">
      <span class="Vorfreude__show-settings-symbol">ğŸ”§</span>
      Settings
      </a>

    {{#if settings.countdownMessage}}
      <div class="Vorfreude__countdown-message">{{settings.countdownMessage}}</div>
    {{/if}}

    <CountdownTimer @end={{store.settings.date}} />
  {{else}}
    <Settings @settings={{store.settings}} />
  {{/unless}}
</Store>
